{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "docker": {
    "pinDigests": true
  },
  "packageRules": [
    {
      "description": "Group Pangolin and Newt updates together",
      "groupName": "pangolin-ecosystem",
      "matchDatasources": ["docker"],
      "matchPackagePatterns": [
        "^fosrl/pangolin$",
        "^fosrl/gerbil$",
        "^fosrl/newt$",
        "^fosrl/olm$"
      ]
    }
  ]
}
