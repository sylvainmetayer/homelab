{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchCategories": [
        "docker"
      ],
      "pinDigests": true
    },
    {
      "description": "Group Pangolin ecosystem updates together",
      "groupName": "pangolin-ecosystem",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "/^fosrl/pangolin$/",
        "/^fosrl/gerbil$/",
        "/^fosrl/newt$/",
        "/^fosrl/olm$/"
      ]
    },
    {
      "description": "Group all Immich role dependencies together",
      "groupName": "immich-role-dependencies",
      "matchFileNames": [
        "ansible/roles/immich/**"
      ]
    }
  ]
}
